<div style="margin: auto;  width: 40%; padding: 10px;">
    <h1>admin panal</h1>
    <div style="width: 50%; margin: auto; margin-bottom: 10px;">
            <button type="button" id="btn-product" class="btn btn-primary" onclick="removeStockCard()">Add Product</button>
            <button type="button" id="btn-quantity" class="btn btn-outline-primary" onclick="removeProductCard()">Add quantity</button>
    </div>
    <div class="card" id="stock" style="display:none;">
            <h5 class="card-header">Stock</h5>
            <div style="padding: 10px;">
                    <form class="was-validated" id="addStock">
                        <div class="form-group">
                            <label>Product Name</label>
                            <select class="form-control">
                                <% for(product of products){%>
                                    <option id=<%=product._id%> ><%=product.name%></option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" min="1" name="quantity"  class="form-control" id="Pname" aria-describedby="emailHelp" required>
                        </div>
                        <button class="btn btn-outline-secondary btn-lg btn-block"  type="submit">Add to stock</button>
                    </form>
            </div>
    </div>
    <div class="card" id="product">
            <h5 class="card-header">New proudect</h5>
            <div class="card-body">
            <form id="addProduct">
                <div class="form-group row">
                    
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" placeholder="Product Name">
                    </div>
                </div>
                    <div class="form-group row">
                        
                        <div class="col-sm-10">
                        <input type="text" class="form-control" name="serialNumber" placeholder="Serial Number">
                        </div>
                    </div>
                    <div class="form-group row">
                        
                        <div class="col-sm-10">
                            <input type="number" name="quantity" min="0" class="form-control" placeholder="Quantity">
                        </div>
                    </div>
                    <div class="form-group row">
                        
                        <div class="col-sm-10">
                            <input type="number" name="price" min="1" class="form-control" placeholder="Price">
                        </div>
                    </div>
                    <div class="form-group row">
                        
                        <div class="col-sm-10">
                            <input type="number" name="sellPrice" min="1" class="form-control" placeholder="Selling Price">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <button type="submit" class="btn btn-outline-secondary btn-lg btn-block">ADD</button>
                </div>
            </form>
    
    </div>
</div>
<div class="alert alert-success" id="alert" role="alert" style="display:none ;">
    A product Added successful
</div>
<div class="alert alert-danger" id="alert-error" role="alert" style="display:none ;">
        Error in data send
</div>